<% include partials/header %>

<div class="ui main text container segment">
    <h1>Edit <%= blog.title %></h1>
    <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST" class="ui form">
        <div class="field">
                <label for="title">Title</label>
                <input type="text" name="blog[title]" value="<%= blog.title %>">
        </div>

        <div class="field">
                <label for="imageUrl">Image URL</label>
                <input type="text" name="blog[imageUrl]" value="<%= blog.imageUrl %>">
        </div>

        <div class="field">
                <label for="body">Body</label>
                <textarea name="blog[body]" id="" cols="30" rows="10"><%= blog.body %></textarea>
            </div>

            <button class="ui black basic button" type="submit">Submit</button>
    </form>

</div>

<% include partials/footer %>