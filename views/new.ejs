<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">
        New Blog
    </div>
    <form action="/blogs" method="POST" class="ui form">
        <div class="field">
            <label for="title">Title</label>
            <input type="text" name="blogs[title]" placeholder="title" required>

        </div>
        <div class="field">
            <label for="imageUrl">ImageUrl</label>
            <input type="text" name="blogs[imageUrl]" placeholder="image URL.." >
        </div>
        <div class="field">
            <label for="body">Blog content</label>
            <textarea name="blogs[body]" id="" cols="30" rows="10" required></textarea>
        </div>

        <button type="submit" class="ui black basic button">Submit</button>


    </form>
</div>

